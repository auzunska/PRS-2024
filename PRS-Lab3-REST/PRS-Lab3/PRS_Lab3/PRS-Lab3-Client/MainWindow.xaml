<Window x:Class="PRS_Lab3_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRS_Lab3_Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <Button Content="Get Resource" Click="GetResource_Click" Width="100" Margin="0,0,0,10"/>
        <Label Content="Results"/>
        <TextBox x:Name="resultTextBox" Height="100" Margin="0,0,0,10" TextWrapping="Wrap"/>

        <Label Content="ID"/>
        <TextBox x:Name="txtId"  Margin="0,0,0,5"/>
        <Label Content="Value"/>
        <TextBox x:Name="txtValue"  Margin="0,0,0,10"/>
        <CheckBox x:Name="chkDelete" Content="Delete?" Margin="0,0,0,10"/>

        <Button Content="Add Resource" Click="AddResource_Click" Width="100" Margin="0,0,0,5"/>
        <Button Content="Update Resource" Click="UpdateResource_Click" Width="100"/>
    </StackPanel>
</Window>
